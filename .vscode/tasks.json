{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build_debug",
            "command": "scons",
            "args": [
                "target=debug",
                "-j8"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "build_release",
            "command": "scons",
            "args": [
                "target=release",
                "-j8"
            ],
            "group": "build"
        }
    ]
}